<h1>Create a new ticket NOW!</h1>

<% if @ticket.errors.any? %>

	<% @ticket.errors.full_messages.each do |error| %>
		<%= error %><br>
	<% end %>

<% end %>

<%= form_for @ticket do |f| %>
	<%= f.label :date %>
	<%= f.date_field :date %>

	<%= f.label :seat_num %>
	<%= f.number_field :seat_num %>

	<%= f.collection_select :flight_id, Flight.all, :id, :destination %>

	<%= f.collection_select :passenger_id, Passenger.all, :id, :name %>

	<%= f.submit %>
<% end %>
