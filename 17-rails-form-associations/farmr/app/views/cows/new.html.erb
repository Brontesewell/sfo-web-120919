<% if @cow.errors.any? %>
	<% @cow.errors.full_messages.each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<%= form_for @cow do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :spots %>
	<%= f.number_field :spots %>

	<%= f.collection_select :farmer_id, Farmer.all, :id, :name %>

	<%= f.submit %>
<% end %>
